        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
        "format" : "{icon}",
		"tooltip": false,
        "on-click": "systemctl -i poweroff",
        "interval": 0,
        "format-icons": {
            "default": "ÔÄë"
        }
    },
    "custom/reboot": {
        "format": "{icon}",
        "tooltip": false,
        "on-click": "systemctl reboot",
