    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        "icon-size": 20,
        "spacing": 12
    },
    "clock": {
        //"locale": "es",
        "format": "{:%R}",
        // "timezone": "Europe/Madrid",
        "tooltip-format": "<big>{:%A, %Ex %EX}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": ""
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": false,
        "on-click": "alacritty -e btop"
    },
